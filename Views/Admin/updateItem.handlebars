<div class="d-flex justify-content-center">
{{#if item}}
<form method="POST" action="/admin/manage/items/update/{{item.id}}?_method=PUT">
    <div class="row gy-3">
        <div class="col-md-12">
            <h2 class="fw-bolder"><i class="fas fa-plus-hexagon"></i> Update Item</h2>
        </div>
        <div class="col-md-6">
            <label for="name" class="form-label fw-bold">Name: </label>
            <input type="text" id="name" class="form-control" name="name" value="{{item.name}}">
        </div>
        <div class="col-md-3">
            <label for="type" class="form-label fw-bold">Product Type: </label>
            <input type="text" id="type" class="form-control" name="type">
        </div>
        <div class="col-md-3">
            <label for="type" class="form-label fw-bold">Product Subtype: </label>
            <input type="text" id="type" class="form-control" name="type">
        </div>
        <div class="col-md-6">
            <label for="price" class="form-label fw-bold">Price: </label>
            <input type="number" id="price" class="form-control" name="price" value="{{item.price}}">
        </div>
        <div class="col-md-3">
            <label for="status" class="form-label fw-bold">Status: </label>
            <select class="form-select" id="status" name="status">                
                <option {{#eq item.status "In stock" }}selected{{/eq}} >In stock</option>            
                <option {{#eq item.status "Sold out" }}selected{{/eq}} >Sold out</option>                
            </select>
        </div>
        <div class="col-md-3">
            <label for="stock" class="form-label fw-bold">Stock: </label>
            <input type="number" id="stock" class="form-control" name="stock" value="{{item.stock}}">
        </div>
        <div class="col-md-6">
            <label for="description" class="form-label fw-bold">Description: </label>
            <textarea class="form-control" rows="3" id="description" name="description">{{item.description}}</textarea>
        </div>

        <div class="col-md-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary mt-2 fw-bold">Update</button>
        </div>
    </div>
</form>
{{/if}}
</div>