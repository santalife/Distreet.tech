        function showReply(e, commentId) {            
            if(document.getElementById('reply-to-'+commentId)){
                document.getElementById("input-reply-" + commentId).focus();
            }
            else{
                var form = document.createElement("form");
                form.setAttribute("id", "reply-"+commentId+"-form");

                var dflex = document.createElement("div");
                dflex.setAttribute('class', 'd-flex mt-3')
                dflex.setAttribute('id', 'reply-to-'+commentId);
                document.getElementById("row-comment-"+commentId).appendChild(dflex);

                var flexshrink = document.createElement("div");
                flexshrink.setAttribute('class', 'flex-shrink-0');

                var pfp = document.getElementById("profile-picture").src;
                var commentspicture = document.createElement('img');
                commentspicture.setAttribute('src', pfp);
                commentspicture.setAttribute('class', 'input-profile-img rounded float-start rounded-circle');

                flexshrink.appendChild(commentspicture);

                dflex.appendChild(flexshrink);

                var flexgrow = document.createElement("div");
                flexgrow.setAttribute('class', 'flex-grow-1 ms-3');

                dflex.appendChild(flexgrow);            

                var input = document.createElement("input");
                input.setAttribute("type", "text");
                input.setAttribute("class", "form-control rounded-pill");
                input.setAttribute("placeholder", "Replying to Joyboy"); 
                input.setAttribute("id", "input-reply-" + commentId);
                form.appendChild(input);
                flexgrow.appendChild(form);

                var closebutton = document.createElement("button");
                closebutton.setAttribute('class', 'btn-close');
                closebutton.onclick = function() {removeReply(this)}

                var flexshrink2 = document.createElement("div");
                flexshrink2.setAttribute('class', 'flex-shrink-0 ms-3 d-flex align-items-center');

                flexshrink2.append(closebutton);
                dflex.append(flexshrink2);
                input.focus();    

                
                $("#reply-" + commentId + "-form").submit(function(e){
                    e.preventDefault();
                    const url = window.location.pathname + '/reply/' + commentId;                    
                    var reply = $("#input-reply-" + commentId).val()
                    console.log(reply);
                    var data = { reply }
                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: JSON.stringify(data),
                        contentType: "application/json; charset=utf-8",
                        'success': (data) => {
                            setInterval('location.reload()', 100);
                    }
                })
                })       
            }
        }

        function removeReply(el){
            el.parentNode.parentNode.parentNode.removeChild(el.parentNode.parentNode);
        }
