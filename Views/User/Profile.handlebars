<script>
    FilePond.registerPlugin(FilePondPluginImagePreview, FilePondPluginFileEncode, FilePondPluginFileMetadata, FilePondPluginImageCrop, FilePondPluginImageTransform);
    const filesElem = document.querySelector('#input-files');
    const filesPond = FilePond.create(filesElem);

    filesPond.setOptions({
        maxFiles: 10,
        allowMultiple: true,
        labelIdle: 'Drag & Drop your Photos or <span class="filepond--label-action">Browse</span>',
        allowImageCrop: true,
        allowImageTransform: true,
        imageCropAspectRatio: '1:1',
    });


    $(function () {
        $("#picture-upload").submit(function (e) {
            e.preventDefault();
            var imagefiles = filesPond.getFiles();
            var formdata = new FormData();
            formdata.append("postcontent", $("#postcontent").val())
            // formdata.append("posttype", $("#posttype").val())       
            for (var i = 0; i < imagefiles.length; i++) {
                formdata.append("images", imagefiles[i].file)
            }
            for (var pair of formdata.entries()) {
                console.log(pair[0] + ', ' + pair[1]);
            }
            $.ajax({
                url: "/user/profile/post/photo&video",
                type: 'POST',
                data: formdata,
                contentType: false,
                processData: false,
                'success': (data) => {
                    $('#picture-upload')[0].reset();
                    filesPond.removeFiles();
                    $('#imagesModal').modal('hide');
                }
            })
        })
    })

